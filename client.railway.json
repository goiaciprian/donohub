{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["/apps/client/*"],
    "buildCommand": "npx nx run @donohub/client:build"
  },
  "deploy": {
    "startCommand": "npx nx run @donohub/client:preview",
    "restartPolicyType": "NEVER"
  }
}
